<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:radius="100dp"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="10dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/recyclers2"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgRecycle2cart"
                android:layout_width="50dp"
                android:layout_height="54dp"
                android:layout_marginStart="52dp"
                android:src="@drawable/sushi"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtName2cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/bold"
                android:text="Name"
                android:textColor="#29282d"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/imgRecycle2cart"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtDescription2cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Description"
                android:textColor="#29282d"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txtName2cart"
                app:layout_constraintTop_toBottomOf="@+id/txtName2cart"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btnPlus2cart"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:background="#F4F0F0"
                android:fontFamily="@font/bold"
                android:lineSpacingExtra="0sp"
                android:text="+"
                android:textColor="#29282d"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/btnMinus2cart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnMinus2cart"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:background="#F4F0F0"
                android:fontFamily="@font/bold"
                android:lineSpacingExtra="0sp"
                android:text="-"
                android:textColor="#29282d"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btnPlus2cart"
                app:layout_constraintTop_toBottomOf="@+id/btnPlus2cart"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/txtTokens2cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/regular"
                android:text="OO"
                android:textColor="#47415C"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnPlus2cart"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txtQuantity2cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/light"
                android:text="3 pcs."
                android:textColor="#29282d"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnPlus2cart"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/txtName2cart"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.262" />

            <TextView
                android:id="@+id/textOrderCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/bold"
                android:shadowColor="#2F2D33"
                android:text="4x"
                android:textColor="#2F2D33"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
