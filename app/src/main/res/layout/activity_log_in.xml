<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F6F9"
    tools:context=".LogInActivity">



    <TextView
        android:id="@+id/txtName8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/black"
        android:text="YamatoðŸ¥¢ "
        android:textColor="#29282d"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtName7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/light"
        android:text=" Leuven "
        android:textColor="#29282d"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtName9"
        app:layout_constraintStart_toEndOf="@+id/txtName9" />

    <TextView
        android:id="@+id/txtName9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:text="Sushi,"
        android:textColor="#29282d"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/txtName8"
        app:layout_constraintTop_toBottomOf="@+id/txtName8" />

    <TextView
        android:id="@+id/txtGuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/light"
        android:onClick="openGuest"
        android:text="Enter as a Guest"
        android:textColor="#2B2B2B"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLogInHere" />

    <Button
        android:id="@+id/btnLogIn"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="88dp"
        android:background="@drawable/btn"
        android:elevation="0dp"
        android:fontFamily="@font/bold"
        android:onClick="openMainFromLogIn"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="#FF2B2B2B"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtName8" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:text="Username"
        android:textColor="#FF2B2B2B"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/txtUsername2"
        app:layout_constraintStart_toStartOf="@+id/txtUsername2" />

    <EditText
        android:id="@+id/txtUsername2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:fontFamily="@font/light"
        android:inputType="textPersonName"
        android:textColor="#2B2B2B"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:text="Password"
        android:textColor="#FF2B2B2B"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/txtPassword2"
        app:layout_constraintStart_toStartOf="@+id/txtPassword2" />

    <EditText
        android:id="@+id/txtPassword2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:fontFamily="@font/light"
        android:inputType="textPassword"
        android:textColor="#2B2B2B"
        app:layout_constraintBottom_toTopOf="@+id/btnLogIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtLogInHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/medium"
        android:onClick="openSignUp"
        android:text="or Sign Up Here"
        android:textColor="#2B2B2B"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogIn" />


</androidx.constraintlayout.widget.ConstraintLayout>