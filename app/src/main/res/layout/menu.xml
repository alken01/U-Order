<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:radius="100dp"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="10dp"
    app:elevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/recyclers2">

        <TextView
            android:id="@+id/txtOrder2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="TextView"
            android:textColor="#29282d"
            android:textSize="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgRecycle2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2" />

        <Button
            android:id="@+id/btnMinus2"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:background="#F4F0F0"
            android:fontFamily="@font/open_sans_semibold"
            android:lineSpacingExtra="0sp"
            android:text="-"
            android:textColor="#29282d"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/btnPlus2"
            app:layout_constraintTop_toBottomOf="@+id/btnPlus2"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imgRecycle2"
            android:layout_width="50dp"
            android:layout_height="54dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/sushi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:text="Name"
            android:textColor="#29282d"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imgRecycle2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtDescription2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_light"
            android:text="Description"
            android:textColor="#29282d"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txtName2"
            app:layout_constraintTop_toBottomOf="@+id/txtName2"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnPlus2"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:background="#F4F0F0"
            android:elevation="20dp"
            android:fontFamily="@font/open_sans_semibold"
            android:lineSpacingExtra="0sp"
            android:text="+"
            android:textColor="#29282d"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btnMinus2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTokens2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/open_sans_light"
            android:text="OO"
            android:textColor="#47415C"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnPlus2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtQuantity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="3 pieces"
            android:textColor="#29282d"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnPlus2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/txtName2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.262" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
